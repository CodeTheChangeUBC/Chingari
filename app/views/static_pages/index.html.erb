					<%= image_tag("icon2.png") %>
					<h2 class="Legal-Rights">Legal Rights</h2>
				</div>
				<div class="tips2">
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
						<%= image_tag("icon1.png", class: "icon1") %>
						<div class="clearfix"></div>
						<h2 class="Immigration">Immigration</h2>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
						<%= image_tag("icon3.png", class: "icon2") %>
						<div class="clearfix"></div>
						<h2 class="Womens-Rights">Womens Rights</h2>
					</div>
				</div>
				<div class="tips3">
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
						<%= image_tag("icon4.png", class: "icon1") %>
						<div class="clearfix"></div>
						<h2 class="Personal-Development">Personal Development</h2>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
						<%= image_tag("icon5.png", class: "icon2") %>
						<div class="clearfix"></div>
						<h2 class="Professional-Development">Professional Development</h2>
					</div>
				</div>
			</div>
			<div class="clearfix"></div>
			<div class="view-resources">
				<button>View Free Resources</button>
			</div>
		</div>
	</div>
</div>
	<!-- // Online Research -->

	<div class="container back-to-top">
			<div class="row">
	        	<span class="scrolltotop"><i class="fa fa-chevron-up"></i></span>
					<p>Back to Top</p>
				</div>
		</div>
		<script>
		$('.scrolltotop').on('click', function() {
		          $('html, body').animate({ scrollTop: 0 }, 800);
		          return false;
		      });

		      $(document).scroll(function() {
		          var y = $(this).scrollTop();
		          if (y > 300) {
		              $('.scrolltotop').fadeIn();
		          } else {
		              $('.scrolltotop').fadeOut();
		          }
		      });
		</script>