<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Martel:300|Raleway:200|Source+Sans+Pro:200" rel="stylesheet" data-turbolinks-track='reload'> 
		<script src="https://cdn.jsdelivr.net/npm/lodash@4.13.1/lodash.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="app">
  	<!-- Render header -->
    <%= render 'layouts/header' %>
    <%= render 'layouts/notifications' %>
    <!-- Render error messages for forms (if any) -->
	  <div id="error-container">
	    <div class="container">
	      <% flash.each do |message_type, message| %>
	          <div class="alert alert-dismissible alert-<%= message_type %>">
	            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	            <%= message %>
	          </div>
	      <% end %>
	    </div>
	  </div>
    <%= yield %>
    <!-- Render footer -->
    <%= render 'layouts/footer' %>
    <script>
      // Turbolinks initial-dom-loaded
      $(document).on("turbolinks:load", () => {
        AnchorScroller.scrollToCurrentAnchor(200, 500)

        // Block anchor-jumps when the destination is on current page
        $("a").click(AnchorScroller.overrideAnchorClick);
      });

      // Turbolink cached-page
      $(document).on("turbolinks:visit", () => {
        AnchorScroller.scrollToCurrentAnchor(200, 500)
      });
      console.log("Rails is running in <%= Rails.env %> environment");
    </script>
  </body>
</html>
